<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llWholeDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fire_bg"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/detailTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/orangeAccent"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/orangeAccent"
        app:tabTextColor="@color/white"/>


    <ScrollView
        android:layout_weight="1"
        android:id="@+id/scrollDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/mon_profile_detail" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvSkillTextVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dump"
                android:textAlignment="center"
                android:textColor="@color/msl_yellow"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:background="@color/grey_tran"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4">

                <ImageView
                    android:id="@+id/ivVariantSkill"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_margin="@dimen/dp_2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/skill_blank" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvVariantSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="@string/dump"
                        android:textColor="@color/msl_yellow"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tvVariantSkillDesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:maxLines="3"
                        android:text="@string/dump"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_2">

                    <TextView
                        android:id="@+id/tvSkillTextPassive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dump"
                        android:textAlignment="center"
                        android:textColor="@color/msl_yellow"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--Group_Start-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:background="@color/grey_tran"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_4">

                            <ImageView
                                android:id="@+id/ivPassiveSkill"
                                android:layout_width="@dimen/dp_48"
                                android:layout_height="@dimen/dp_48"
                                android:layout_margin="@dimen/dp_2"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/skill_blank" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/dp_4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/power"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvPassiveSkillPower"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/type"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvPassiveSkillType"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/target"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvPassiveSkillTarget"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/soul_size"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvPassiveSkillSoulSize"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                    </LinearLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:text="@string/effect_value"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_11" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvPassiveEffectValue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:text="@string/dump"
                                        android:textColor="@color/msl_yellow"
                                        android:textSize="@dimen/sp_10" />


                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                        <!--Group_End-->


                        <!--Group_Start-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:background="@color/grey_tran"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"

                            android:padding="@dimen/dp_4">

                            <ImageView
                                android:id="@+id/ivPassiveSkillEffect"
                                android:layout_width="@dimen/dp_48"
                                android:layout_height="@dimen/dp_48"
                                android:layout_margin="@dimen/dp_2"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/skill_blank" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPassiveSkillEffect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:text="@string/dump"
                                    android:textColor="@color/msl_yellow"
                                    android:textSize="@dimen/sp_10"
                                    android:textStyle="bold" />

                                <me.grantland.widget.AutofitTextView
                                    android:id="@+id/tvPassiveSkillEffectDesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:maxLines="3"
                                    android:minLines="3"
                                    android:text="@string/dump"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_10" />

                            </LinearLayout>


                        </LinearLayout>


                        <!--Group_End-->

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSkillTextActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dump"
                        android:textAlignment="center"
                        android:textColor="@color/msl_yellow"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <!--Group_Start-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:background="@color/grey_tran"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_4">

                            <ImageView
                                android:id="@+id/ivActiveSkill"
                                android:layout_width="@dimen/dp_48"
                                android:layout_height="@dimen/dp_48"
                                android:layout_margin="@dimen/dp_2"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/skill_blank" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/dp_4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/power"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvActiveSkillPower"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/type"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvActiveSkillType"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/target"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvActiveSkillTarget"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <me.grantland.widget.AutofitTextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/soul_size"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/sp_11" />

                                            <me.grantland.widget.AutofitTextView
                                                android:id="@+id/tvActiveSkillSoulSize"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:text="@string/dump"
                                                android:textColor="@color/msl_yellow"
                                                android:textSize="@dimen/sp_10" />


                                        </LinearLayout>


                                    </LinearLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:text="@string/effect_value"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_11" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvActiveEffectValue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:text="@string/dump"
                                        android:textColor="@color/msl_yellow"
                                        android:textSize="@dimen/sp_10" />


                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                        <!--Group_End-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:background="@color/grey_tran"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"

                            android:padding="@dimen/dp_4">

                            <ImageView
                                android:id="@+id/ivActiveSkillEffect"
                                android:layout_width="@dimen/dp_48"
                                android:layout_height="@dimen/dp_48"
                                android:layout_margin="@dimen/dp_2"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/skill_blank" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvActiveSkillEffect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:text="@string/dump"
                                    android:textColor="@color/msl_yellow"
                                    android:textSize="@dimen/sp_10"
                                    android:textStyle="bold" />

                                <me.grantland.widget.AutofitTextView
                                    android:id="@+id/tvActiveSkillEffectDesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:maxLines="3"
                                    android:minLines="3"
                                    android:text="@string/dump"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_10" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_margin="@dimen/dp_2"
                android:id="@+id/ivSkilBookDetail"
                android:src="@drawable/skill_book_1"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvSkillBookDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:animationCache="false"
                    android:fadingEdge="none"
                    android:fastScrollEnabled="true"
                    android:padding="@dimen/dp_2"
                    android:scrollbars="none"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvDisplaySection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:animationCache="false"
                    android:fadingEdge="none"
                    android:fastScrollEnabled="true"
                    android:padding="@dimen/dp_2"
                    android:scrollbars="none"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvSkillBookActive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:animationCache="false"
                    android:fadingEdge="none"
                    android:fastScrollEnabled="true"
                    android:padding="@dimen/dp_2"
                    android:scrollbars="none"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />


            </LinearLayout>


            <TextView
                android:layout_margin="@dimen/dp_2"
                android:textAlignment="center"
                android:visibility="gone"
                android:id="@+id/tvSkillBookComingSoon"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="@color/msl_yellow"
                android:text="@string/dump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_margin="@dimen/dp_2"
                android:visibility="gone"
                android:id="@+id/tvSkillBookComingSoonDesc"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="@string/dump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_horizontal">


        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_ad_unit_id"/>

    </LinearLayout>


</LinearLayout>
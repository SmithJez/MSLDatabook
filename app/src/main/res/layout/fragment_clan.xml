<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/pbClan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/lvClan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animationCache="false"
            android:fastScrollEnabled="true"

            android:scrollingCache="false"
            android:smoothScrollbar="true" />

        <com.felania.monstersuperleaguedatabook.utils.RecyclerViewFastScrollerWithBubble
            android:id="@+id/fastScrollerClan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/lvClan"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/lvClan" />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_horizontal">


        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewClan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_ad_unit_id"/>

    </LinearLayout>


</LinearLayout>